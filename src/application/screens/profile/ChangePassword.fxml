<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="profileAnchorPane" prefHeight="358.0" prefWidth="441.0" style="-fx-background-color: white; -fx-background-radius: 5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.screens.profile.ChangePasswordController">
   <children>
      <Label layoutX="141.0" layoutY="21.0" text="CHANGE PASSWORD">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <JFXButton id="addButton" layoutX="145.0" layoutY="293.0" onAction="#changePassword" prefHeight="32.0" prefWidth="152.0" styleClass="redButton" stylesheets="@../../components/datagrid/datagrid.css" text="Change Password" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </JFXButton>
      <JFXPasswordField fx:id="oldPasswordTextBox" layoutX="93.0" layoutY="77.0" prefHeight="25.0" prefWidth="256.0" promptText="Old Password">
         <font>
            <Font size="13.0" />
         </font>
      </JFXPasswordField>
      <JFXPasswordField fx:id="newPasswordTextBox" layoutX="93.0" layoutY="142.0" prefHeight="25.0" prefWidth="256.0" promptText="New Password">
         <font>
            <Font size="13.0" />
         </font>
      </JFXPasswordField>
      <JFXPasswordField fx:id="confirmNewPasswordTextBox" layoutX="93.0" layoutY="206.0" prefHeight="25.0" prefWidth="256.0" promptText="Confirm New Password">
         <font>
            <Font size="13.0" />
         </font>
      </JFXPasswordField>
      <Label layoutX="203.0" layoutY="328.0" onMouseClicked="#GoToProfileDetails" styleClass="goBackLabel" stylesheets="@profile.css" text="Go Back" textFill="#8d8585">
         <font>
            <Font size="10.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
   </children>
</AnchorPane>
